@using TatilSeyahatProject.Models.Siniflar;
@model List<Blog>

<div class="padding1">
    <h4>Our Best Places</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
        <div class="bot-img">
            <img src="@x.BlogImage"  style:"width:120px; height:65px; alt=""/>
        </div>
        <div class="bot-desc">
            @if (x.Aciklama.Length <= 200)
            {
                <p>@x.Aciklama</p>
            }
            else
            {
                <p>@x.Aciklama.Substring(0, 200)...</p>
            }
        </div>
        <div class="clear"></div>

        }
    </div>
    @Html.Action("Partial5","Default")
</div>
