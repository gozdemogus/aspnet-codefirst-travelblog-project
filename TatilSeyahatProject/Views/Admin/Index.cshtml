@using TatilSeyahatProject.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>HEADER</th>
        <th>DELETE</th>
        <th>UPDATE</th>
        <th>DETAILS</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">Update</a></td>
            <td><a href="/Blog/BlogDetay/@x.ID" class="btn btn-default">Go To</a></td>
        </tr>
    }

</table>

<td><a href="/Admin/YeniBlog" class="btn btn-primary">New Blog</a></td>
